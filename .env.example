# Configuration Restaurant Pro
# Copiez ce fichier vers .env et modifiez les valeurs selon votre environnement

# Configuration de la base de données
DB_TYPE=mysql
# DB_TYPE=postgresql

# MySQL Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=restaurant_user
DB_PASSWORD=restaurant_password
DB_NAME=restaurant_pro
DB_SSL=false

# PostgreSQL Configuration (si DB_TYPE=postgresql)
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=restaurant_user
# DB_PASSWORD=restaurant_password
# DB_NAME=restaurant_pro
# DB_SSL=false

# Configuration JWT
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRES_IN=24h

# Configuration du serveur
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:8080

# Configuration des uploads
UPLOAD_MAX_SIZE=10mb
UPLOAD_PATH=./uploads

# Configuration des logs
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Configuration email (optionnel)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=Restaurant Pro <noreply@restaurant-pro.com>

# Configuration de sauvegarde (optionnel)
BACKUP_ENABLED=true
BACKUP_INTERVAL=24
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30

# Configuration Redis (optionnel pour les sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Configuration de sécurité
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:8080

# Configuration de monitoring (optionnel)
SENTRY_DSN=
ANALYTICS_KEY=

# Mode debug
DEBUG=restaurant-pro:*
